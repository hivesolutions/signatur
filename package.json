{
    "name": "signatur",
    "version": "0.2.1",
    "description": "Simple Web App for Signatures",
    "keywords": [
        "html",
        "signatures",
        "vector"
    ],
    "homepage": "https://github.com/hivesolutions/signatur#readme",
    "bugs": {
        "url": "https://github.com/hivesolutions/signatur/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hivesolutions/signatur.git"
    },
    "license": "Apache-2.0",
    "author": "Hive Solutions",
    "main": "app.js",
    "files": [
        "app.js",
        "lib/**/*.js",
        "static/**/*.html",
        "static/**/*.js",
        "test/**/*.js",
        "views/**/*.ejs"
    ],
    "scripts": {
        "dev": "nodemon app.js",
        "lint": "eslint \"./**/*.js\"",
        "lint-fix": "eslint \"./**/*.js\" --fix",
        "prettier": "prettier \"./**/*.{js,json}\" --write",
        "pretty": "npm run prettier && npm run lint-fix",
        "start": "node app.js",
        "test": "mocha --recursive",
        "upgrade": "npx sort-package-json && ncu -u"
    },
    "dependencies": {
        "consola": "^2.15.0",
        "ejs": "^3.1.5",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "hive-js-util": "^0.2.6",
        "mustache-express": "^1.3.0",
        "node-fetch": "^2.6.1",
        "uuid": "^8.3.2",
        "yonius": "^0.5.5"
    },
    "devDependencies": {
        "eslint": "^7.16.0",
        "eslint-config-hive": "^0.5.1",
        "mocha": "^8.2.1",
        "nodemon": "^2.0.6",
        "npm-check-updates": "^10.2.5",
        "prettier": "^2.2.1",
        "prettier-config-hive": "^0.1.7",
        "sort-package-json": "^1.48.0"
    }
}
