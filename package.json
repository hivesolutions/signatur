{
    "name": "signatur",
    "version": "0.7.1",
    "description": "Simple Web App for Signatures",
    "keywords": [
        "html",
        "signatures",
        "vector"
    ],
    "homepage": "https://github.com/hivesolutions/signatur#readme",
    "bugs": {
        "url": "https://github.com/hivesolutions/signatur/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hivesolutions/signatur.git"
    },
    "license": "Apache-2.0",
    "author": "Hive Solutions",
    "main": "app.js",
    "files": [
        "app.js",
        "lib/**/*.js",
        "static/**/*.html",
        "static/**/*.js",
        "test/**/*.js",
        "views/**/*.ejs"
    ],
    "scripts": {
        "dev": "nodemon app.js",
        "lint": "eslint \"./**/*.js\"",
        "lint-fix": "eslint \"./**/*.js\" --fix",
        "prettier": "prettier \"./**/*.{js,json}\" --write",
        "pretty": "npm run prettier && npm run lint-fix",
        "start": "node app.js",
        "test": "mocha --recursive",
        "upgrade": "npx sort-package-json && ncu -u"
    },
    "dependencies": {
        "consola": "^2.15.3",
        "ejs": "^3.1.8",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "hive-js-util": "^0.4.1",
        "mustache-express": "^1.3.2",
        "node-fetch": "^2.6.7",
        "uuid": "^9.0.0",
        "yonius": "^0.11.7"
    },
    "devDependencies": {
        "eslint": "^8.27.0",
        "eslint-config-hive": "^0.6.0",
        "eslint-plugin-n": "^15.5.0",
        "mocha": "^10.1.0",
        "nodemon": "^2.0.20",
        "npm-check-updates": "^16.3.18",
        "prettier": "^2.7.1",
        "prettier-config-hive": "^0.1.7",
        "sort-package-json": "^2.1.0"
    }
}
